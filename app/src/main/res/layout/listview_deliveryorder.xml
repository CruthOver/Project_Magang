<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/backgroundList">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sepatu Adidas"
            android:textColor="@color/font1"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/kBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danu Stiawan"
            android:paddingTop="4dp"
            android:textColor="@color/font2"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tnggl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02 Jan 2018"
            android:paddingTop="4dp"
            android:textColor="@color/font1"
            android:textStyle="italic"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/total_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/20"
            android:textColor="@color/font2"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:maxWidth="25dp"
            android:maxHeight="25dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_available"
            android:tint="@color/colorPrimaryDark"/>
    </LinearLayout>
</LinearLayout>